Screen:


    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: "vertical"

        MDLabel:
            id: weathers
            text: "Enter City name"
            font_size: 35
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]      
            padding_y: 15

        MDTextField:
            id: location
            mode: "rectangle"
            hint_text: "City Name"
            icon_right: "crosshairs-gps"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x":0.5}

        MDRoundFlatButton:
            text: "Find Weather"
            font_size: 22
            pos_hint: {"center_x":0.5}
            spacing: 20
            on_press: app.find()

        MDRoundFlatButton:
            text: "Clear"
            font_size: 22
            pos_hint: {"center_x":0.5}
            spacing: 20
            on_press: app.clear()

        Widget:
            size_hint_y: None
            height: 10